<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp"
    android:background="@drawable/bottom_solid2" >

    <ImageView
        android:id="@+id/goods_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/goods_right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/goods_right"
        android:layout_toRightOf="@+id/textView1"
        android:paddingLeft="5dp" 
        android:paddingTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="6dp"
                android:layout_height="wrap_content"
                android:src="@drawable/goods_dian" />
            <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="#7f7f7f"
		        android:textSize="14sp"
		        android:layout_marginLeft="4dp"
		        android:text="30天无忧退换" />
            
            <ImageView
                android:layout_width="6dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/goods_dian" />
            <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="4dp"
		        android:textColor="#7f7f7f"
		        android:textSize="14sp"
		        android:text="48小时退款" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="6dp"
                android:layout_height="wrap_content"
                android:src="@drawable/goods_dian" />
            <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="4dp"
		        android:textColor="#7f7f7f"
		        android:textSize="14sp"
		        android:text="满88元包邮" />
            
            <ImageView
                android:layout_width="6dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/goods_dian" />
            <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="4dp"
		        android:textColor="#7f7f7f"
		        android:textSize="14sp"
		        android:text="稻草人自营品牌" />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="6dp"
                android:layout_height="wrap_content"
                android:src="@drawable/goods_dian" />
            <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="4dp"
		        android:textColor="#7f7f7f"
		        android:textSize="14sp"
		        android:text="部分海外地区可配送" />
            
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="top"
        android:text="服务:"
        android:textColor="#303030"
        android:textSize="16sp" />

</RelativeLayout>